{% extends '::base.html.twig' %}
    {% block body %}
            <div id="page-inner">


                <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header">
                            Tous les secteurs d'activité <small></small>
                        </h1>
                    </div>
                </div>


                                <div class="btn-group" role="group" >
                                   <a class="btn btn-success" href="{{ path('admin_entreprise_secteur_index') }}"> 
                                        <i class="glyphicon glyphicon-globe"> </i>Tous les secteurs d'activité</a>
                                   
                                </div>
                                 <div style="float:right" >
                                     <a class="btn btn-primary"  href="#modal_add" data-toggle="modal">NOUVEAU SECTEUR D'ACTIVITE</a>
                                </div>

                <div class="row">

                    <div class="col-md-12 col-sm-24 col-xs-24">

                        <div class="panel panel-default">
                            
                             
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Libellé</th>
                                            <th>Etat</th>
                                            <th><i class="fa fa-cog fa-fw" aria-hidden="true"></i></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for secteur in listSecteur %}
                                            <tr>
                                                <th scope="row">{{ secteur.id }}</th>
                                                <td>{{ secteur.libele }}</td>
                                                {% if secteur.etat == 0 %}
                                                    <td>Désactiver</td>
                                                {% else %}
                                                    <td>Activer</td>
                                                {% endif %}
                                                <td></td>
                                            </tr>
                                        {% endfor %}

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                     <!-- MODAL  -->
                 <div class="modal fade" id="modal_add" tabindex="-1" role="dialog" aria-labelledby="modal_add" aria-hidden="true">
                                      <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                         
                                          <div class="modal-body">
                                            <button type="button" class="btn btn-success btn-lg" >Ajouter</button>
                                          </div>
                                          
                                        </div>
                                      </div>
                                    </div>
                <!-- /. ROW  -->
            <!-- /. PAGE INNER  -->
        </div>
    {% endblock body %}
  