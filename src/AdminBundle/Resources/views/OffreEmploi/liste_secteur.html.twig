{% extends '::base.html.twig' %}
    {% block body %}
            <div id="page-inner">


                <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header">
                            Tous les secteurs d'activité <small></small>
                        </h1>
                    </div>
                </div>
                {% for success_message in app.session.flashbag.get('message') %}
                         <div class="alert alert-success"> {{ success_message }} </div>
                {% endfor %}
                 <div class="btn-group" role="group" >
                                   <a class="btn btn-success" href="{{ path('admin_entreprise_secteur_index') }}"> 
                                        <i class="glyphicon glyphicon-globe"> </i>Tous les secteurs d'activité</a>
                                   
                                </div>
                                 <div style="float:right" >
                                     <a class="btn btn-primary"  href="#modal_add" data-toggle="modal">NOUVEAU SECTEUR D'ACTIVITE</a>
                                </div>



                <div class="row">

                    <div class="col-md-12 col-sm-24 col-xs-24">

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Tous les secteurs
                            </div>
                            
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Libellé</th>
                                            <th>Etat</th>
                                            <th><i class="fa fa-cog fa-fw" aria-hidden="true"></i></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for secteur in listSecteur %}
                                            <tr>
                                                <th scope="row">{{ secteur.id }}</th>
                                                <td>{{ secteur.libele }}</td>
                                                {% if secteur.etat == 0 %}
                                                    <td>Désactiver</td>
                                                {% else %}
                                                    <td>Activer</td>
                                                {% endif %}
                                                <td>
                                                    <div id="show_after_click">
                                                            {% if secteur.etat  == 0 %}
                                                             <a href="{{ path('admin_secteur_change_status', {'id': secteur.id}) }}" class="btn btn-success"> 
                                                                    <i class="glyphicon  glyphicon-ok"></i></a>
                                                            {% else %}
                                                             <a href="{{ path('admin_secteur_change_status', { 'id': secteur.id}) }}" class="btn btn-warning"> 
                                                                    <i class="glyphicon   glyphicon-remove"></i></a>
                                                            {% endif %}
                                                             <a href="#modal_confirm_delete" data-id="{{ secteur.id }}" class="btn btn-danger confirmDialog"  data-toggle="modal"> 
                                                                <i class="glyphicon   glyphicon-remove"></i></a>

                                                               
                                                           
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}

                                        </tbody>
                                    </table>
                                </div>
                                <div class="text-center">{{ knp_pagination_render(listSecteur) }}</div>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- MODAL ADD  SECTEUR  -->
                 <div class="modal fade" id="modal_add" tabindex="-1" role="dialog" aria-labelledby="modal_add" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header btn-primary">
                                    <h3 class="modal-title">Ajout secteur d'activité</h3>
                                    
                                </div>
                                <div class="modal-body">
                                        {{ form_start(form) }}
                                        {{ form_widget(form) }}
                                        {{ form_end(form) }}
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                 </div>

                <!-- MODAL CONFIRM DELETE  SECTEUR  -->
                 <div class="modal fade" id="modal_confirm_delete" tabindex="-1" role="dialog" aria-labelledby="modal_confirm_delete" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                
                                <div class="modal-body">

                                    <center>
                                         <i class="fa fa-exclamation-circle" style="font-size:78px"; color="gray"></i><br>
                                         <h2>Supprimer</h2>
                                        <p>Êtes-vous sûr de vouloir la supprimer?</p>
                                            <a href=""  class="btn btn-danger btn-lg" >Oui</a>
                                            <button type="button" class="btn btn-secondary btn-lg" data-dismiss="modal">Non</button>
                                    </center>
                                </div>
                                
                            </div>
                        </div>
                 </div>

                <!-- MODAL CONFIRM CHANGE STATUS  SECTEUR  -->
                 <div class="modal fade" id="modal_confirm_chang_status" tabindex="-1" role="dialog" aria-labelledby="modal_confirm_delete" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                
                                <div class="modal-body">

                                    <center>
                                        <i class="fa fa-exclamation-circle" style="font-size:78px"; color="gray"></i><br>
                                        <h2></h2>
                                        <p>Are you sure you want to deactivate?</p>
                                            <a href=""  class="btn btn-danger btn-lg" >Oui</a>
                                            <button type="button" class="btn btn-secondary btn-lg" data-dismiss="modal">Non</button>
                                    </center>
                                </div>
                                
                            </div>
                        </div>
                 </div>
                <!-- /. ROW  -->
            <!-- /. PAGE INNER  -->
        </div>
            <script type="text/javascript"  src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js">
                 $(document).on("click", "#modal_confirm_delete", function (e) {
                    e.preventDefault();
                    var _self = $(this);
                    var secteurId = _self.data('id');
                     console.log(secteurId);

                    $(_self.attr('href')).modal('show');
                });
            </script>
    {% endblock body %}
  