<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title{% block title %}Itjobmada{% endblock %}</title>
    <!-- Bootstrap Styles-->
    <link href="{{ asset('assets/css/bootstrap.css') }}" rel="stylesheet" />
    <!-- FontAwesome Styles-->
    <link href="{{ asset('assets/css/font-awesome.css') }}" rel="stylesheet" />
    <!-- Morris Chart Styles-->
    <link href="{{ asset('assets/js/morris/morris-0.4.3.min.css') }}" rel="stylesheet" />
    <!-- Custom Styles-->
    <link href="{{ asset('assets/css/custom-styles.css') }}" rel="stylesheet" />
    <!-- Google Fonts-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>

<body>
    <div id="wrapper">
    {% include 'AdminBundle:OffreEmploi:sideBar.html.twig' %}
    {% block body %}
        <div id="page-wrapper">
            <div id="page-inner">


                <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header">
                            Tous les secteurs d'activité <small></small>
                        </h1>
                    </div>
                </div>




                <div class="row">

                    <div class="col-md-12 col-sm-24 col-xs-24">

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Tous les secteurs
                            </div>
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Libellé</th>
                                            <th>Etat</th>
                                            <th><i class="fa fa-cog fa-fw" aria-hidden="true"></i></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for secteur in listSecteur %}
                                            <tr>
                                                <th scope="row">{{ secteur.id }}</th>
                                                <td>{{ secteur.libele }}</td>
                                                {% if secteur.etat == 0 %}
                                                    <td>Désactiver</td>
                                                {% else %}
                                                    <td>Activer</td>
                                                {% endif %}
                                                <td></td>
                                            </tr>
                                        {% endfor %}

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- /. ROW  -->
                {% include 'AdminBundle:OffreEmploi:footer.html.twig' %}
            </div>
            <!-- /. PAGE INNER  -->
        </div>
    {% endblock %}
    <!-- /. PAGE WRAPPER  -->
    </div>
<!-- /. WRAPPER  -->
<!-- JS Scripts-->
<!-- jQuery Js -->
<script src="{{ asset('assets/js/jquery-1.10.2.js') }}"></script>
<!-- Bootstrap Js -->
<script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
<!-- Metis Menu Js -->
<script src="{{ asset('assets/js/jquery.metisMenu.js') }}"></script>
<!-- Morris Chart Js -->
<script src="{{ asset('assets/js/morris/raphael-2.1.0.min.js') }}"></script>
<script src="{{ asset('assets/js/morris/morris.js') }}"></script>
<!-- Custom Js -->



</body>

</html>